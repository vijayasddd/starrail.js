{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./scripts/**/*",
    "./dist/**/*",
    "./example/**/*",
    "./docs/**/*"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}